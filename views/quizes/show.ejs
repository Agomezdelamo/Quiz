<form method="get" action="/quizes/<%= quiz.id %>/answer">        
  Pregunta: <%= quiz.pregunta %> <p>
  <input type="text" name="respuesta" value="Responda aquí"/>
  <input type="submit" value="Enviar">
</form>

<p>
	<a href="/quizes/<%= quiz.id %>/comments/new">
		<button>Nuevo Comentario</button>
	</a>
</p>

<p><strong>Comentarios:</strong></p>
<%for(index in quiz.Comments){%>
	<%if(quiz.Comments[index].publicado || session.user){%>
		<p>- <%=quiz.Comments[index].texto%></p>
			<%if( session.user){%>
				<div> <span>este comentario esta publicado?</span>
				<span><strong><%=quiz.Comments[index].publicado.toString()%></strong></span> </div>
				<a href="/quizes/<%= quiz.id %>/comments/<%=quiz.Comments[index].id%>/publish"><button>Publicar</button></a>
			<%}%>
		</p>
	<%}%>
<%}%>